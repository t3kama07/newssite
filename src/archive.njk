{% for article in news %}
---
layout: layout.njk
title: {{ article.title }}
description: {{ article.description }}
image: {{ article.image_url }}
permalink: "articles/{{ article.title | slug }}/index.html"
---
<article>
  <h1>{{ article.title }}</h1>
  {% if article.image_url %}
    <img src="{{ article.image_url }}" alt="{{ article.title }}">
  {% endif %}
  <p>{{ article.description }}</p>
  <p><a href="{{ article.link }}" target="_blank" rel="noopener">Read Full Original Article</a></p>
  <small>Published: {{ article.pubDate }}</small>
</article>
{% endfor %}
