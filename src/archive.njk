---
layout: layout.njk
title: "News Archive - GlobalPulse"
pagination:
  data: news
  size: 10
  alias: articles
  addAllPagesToCollections: true
permalink: "{% if pagination.pageNumber == 0 %}archive/{% else %}archive/page-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---
<h2>News Archive - Page {{ pagination.pageNumber + 1 }}</h2>

{% for article in articles %}
  <article>
    <h3><a href="/articles/{{ article.title | slug }}/">{{ article.title }}</a></h3>
    {% if article.image_url %}
      <img src="{{ article.image_url }}" alt="{{ article.title }}">
    {% endif %}
    <p>{{ article.description }}</p>
    <small>{{ article.pubDate }}</small>
  </article>
{% endfor %}

<div style="margin-top:20px;">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">⬅ Previous</a>
  {% endif %}
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}" style="float:right;">Next ➡</a>
  {% endif %}
</div>
