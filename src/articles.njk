---
pagination:
  data: news
  size: 1
  alias: article
permalink: "articles/{{ article.title | slug }}/index.html"
layout: layout.njk
---

<article>
  <h2>{{ article.title }}</h2>
  {% if article.image_url %}
    <img src="{{ article.image_url }}" alt="{{ article.title }}">
  {% endif %}
  <p>{{ article.description }}</p>
  <p><a href="{{ article.link }}" target="_blank" rel="noopener">Read Original Source</a></p>
  <small>{{ article.pubDate }}</small>
</article>
