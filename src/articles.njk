{% for article in news %}
---
layout: layout.njk
title: {{ article.title }}
description: {{ article.description }}
image: {{ article.image_url }}
permalink: "articles/{{ article.title | slug }}/index.html"
---
<h2>{{ article.title }}</h2>
{% if article.image_url %}
<img src="{{ article.image_url }}" alt="">
{% endif %}
<p>{{ article.description }}</p>
<p><a href="{{ article.link }}" target="_blank">Read Original Source</a></p>
<small>Published: {{ article.pubDate }}</small>
{% endfor %}